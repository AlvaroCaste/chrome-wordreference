{
  "name": "Wordreference It !",
  "description": "Opens a tab with Wordreference's translation for a selected text from the context menu",
  "version": "1.0",
  "permissions": ["tabs", "contextMenus", "http://*/*", "https://*/*"],
  "background": {
    "persistent": false,
    "scripts": ["wordreference.js"]
  },
  "manifest_version": 2,
  "icons" : {
  	"48": "wr-icon64.png"
  },
  "options_page": "settings.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}